---
export interface Props {
    siteTitle?: string;
    nav?: { label: string; href: string }[];
}

const {
    siteTitle = "Olivia Perry",
    nav = [
        { label: "Home", href: "/" },
        { label: "About", href: "/about" },
        { label: "Contact", href: "/contact" },
    ],
} = Astro.props;
---

<header
    class="bg-white dark:bg-card border-b border-[rgba(0,0,0,0.06)] dark:border-border sticky top-0 z-50"
>
    <div class="max-w-6xl mx-auto p-4 flex items-center justify-between">
        <a class="flex items-center gap-3 no-underline text-current" href="/">
            <span
                class="inline-flex items-center justify-center w-9 h-9 bg-[#111827] text-white rounded-md font-bold text-sm"
                aria-hidden="true">OP</span
            >
            <span class="text-lg font-semibold">{siteTitle}</span>
        </a>

        <div class="flex items-center gap-4">
            <nav class="main-nav" aria-label="Main navigation">
                <ul class="hidden sm:flex gap-4 list-none m-0 p-0">
                    {
                        nav.map((item) => (
                            <li>
                                <a
                                    class="text-current no-underline px-2 py-1 rounded font-medium hover:bg-[rgba(0,0,0,0.04)] dark:hover:bg-[rgba(255,255,255,0.08)] focus:bg-[rgba(0,0,0,0.04)] dark:focus:bg-[rgba(255,255,255,0.08)]"
                                    href={item.href}
                                >
                                    {item.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </nav>

            <button
                id="theme-toggle"
                type="button"
                class="p-2 rounded-md hover:bg-[rgba(0,0,0,0.04)] dark:hover:bg-[rgba(255,255,255,0.08)] focus:outline-none focus:ring-2 focus:ring-ring transition-colors"
                aria-label="Toggle theme"
            >
                <svg
                    id="theme-toggle-light-icon"
                    class="w-5 h-5 dark:hidden"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
                        fill-rule="evenodd"
                        clip-rule="evenodd"></path>
                </svg>
                <svg
                    id="theme-toggle-dark-icon"
                    class="w-5 h-5 hidden dark:block"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
                    ></path>
                </svg>
            </button>
        </div>
    </div>
</header>

<script>
    // @ts-nocheck
    const themeToggle = document.getElementById("theme-toggle");
    const html = document.documentElement;
    const storageKey = "theme";

    /**
     * @param {'light' | 'dark'} theme
     */
    function applyTheme(theme) {
        const meta = document.querySelector('meta[name="theme-color"]');
        if (theme === "dark") {
            html.classList.add("dark");
            localStorage.setItem(storageKey, "dark");
            meta?.setAttribute("content", "#0b0b0d");
        } else {
            html.classList.remove("dark");
            localStorage.setItem(storageKey, "light");
            meta?.setAttribute("content", "#ffffff");
        }
    }

    // Initial state: icons are controlled via CSS dark: variants; nothing to do here.

    themeToggle?.addEventListener("click", () => {
        applyTheme(html.classList.contains("dark") ? "light" : "dark");
    });

    // Optional: keep multiple tabs in sync
    window.addEventListener("storage", (e) => {
        if (e.key === storageKey && e.newValue) applyTheme(e.newValue);
    });
</script>
